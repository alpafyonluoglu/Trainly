<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trainly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray600</item>
        <item name="colorPrimaryVariant">@color/gray800A</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <!-- Light background and dark text -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Trainly.whiteBg" parent="Theme.Trainly">

        <!-- Light background and dark text -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Trainly.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Trainly.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Trainly.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>