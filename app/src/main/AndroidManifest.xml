<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fliers.trainly">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trainly.NoActionBar">
        <activity android:name=".activities.SplashActivity"
            android:theme="@style/Theme.Trainly.whiteBg"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TravelHistoryActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.TrainsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.TicketsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.TicketInfoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.WelcomeActivity"
            android:theme="@style/Theme.Trainly.NoActionBar.FullScreenActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.LinesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.HelpActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.GeneralInfoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.EmployeesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.EditScheduleActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CustomerHomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CustomerAccountActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CompanyHomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CompanyAccountActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.BuyTicketActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.AddTrainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.AddEmployeeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.EmailVerificationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="trainly-app.firebaseapp.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCUVyksVvyWTWKIWo1QuhSwpZnjtWql2eE" />
    </application>

</manifest>